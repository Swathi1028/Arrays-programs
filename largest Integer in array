public class LargestIntegerArray {
    public static void main(String[] args) {
        int[] arr = new int[]{5, 4, 3, 6, 1};
        int largest = arr[0];
        for (int i = 1; i < arr.length; i++) {
            if (arr[i] > largest) {
                largest = arr[i];
            }
        }
        System.out.println("The largest integer in the array is: " + largest);
    }
}
